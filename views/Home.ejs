      <script>

   $(document).ready(function() {
    const $avatarSegment = $('.avatar-segment');
    const $carouselSegment = $("#carouselExampleCaptions");

    $('.redirect-auth').click(function() {
        window.location.href = '/authorization';
    });

    function checkScroll() {
        const scrollPosition = $(window).scrollTop() + $(window).height();
        const avatarPosition = $avatarSegment.offset().top + $avatarSegment.height() / 3;
        const carouselPosition = $carouselSegment.offset().top + $carouselSegment.height() / 3;

        if (scrollPosition > avatarPosition) {
            $avatarSegment.addClass("visible");
        } 

        if (scrollPosition > carouselPosition) {
            $carouselSegment.addClass("visible");
        }
    }

    $(window).scroll(checkScroll);
    checkScroll(); // Initial check in case the element is already in view
});

      </script>
